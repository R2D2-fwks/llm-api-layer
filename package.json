    "@hapi/vision": "^7.0.3",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^5.0.2",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.10",
    "@types/hapi__jwt": "^3.0.1",
    "@types/hapi__vision": "^5.5.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
