{
  "name": "llm-api-layer",
  "version": "1.0.0",
  "description": "This is the api layer over the ollama which will be secure and multi tenant approach",
  "keywords": [
    "llm",
    "ollama",
    "api-layer"
  ],
  "license": "ISC",
  "author": "Kartikeya Sharma",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
